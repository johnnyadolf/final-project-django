# Django Settings
# SECURITY WARNING: Generate a new secret key for production!
# You can generate one using: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-secret-key-here-change-this-in-production

# Debug mode - MUST be False in production
DEBUG=False

# Allowed hosts - comma-separated list of allowed hostnames
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# Database Configuration
# For PostgreSQL (production):
# DATABASE_URL=postgresql://username:password@hostname:5432/database_name
# For local development with SQLite, leave this commented out or empty
DATABASE_URL=

# Azure/Cloud-specific settings (optional)
# WEBSITE_SITE_NAME=your-app-name

# Media and Static Files (optional overrides)
# MEDIA_ROOT=/path/to/media
# STATIC_ROOT=/path/to/static

# Email Configuration (optional, for password reset, etc.)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@example.com
# EMAIL_HOST_PASSWORD=your-email-password

# Additional Security Settings (optional)
# CSRF_TRUSTED_ORIGINS=https://your-domain.com,https://www.your-domain.com
